{
  "manifest_version": 2,
  "name": "print-helper",
  "version": "1.0",
  "description": "Prints a page.",
  "browser_specific_settings": {
    "gecko": {
      "id": "print-helper@cookiejarapps.com"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["print.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "nativeMessaging",
    "nativeMessagingFromContent",
    "geckoViewAddons",
    "tabs",
    "<all_urls>"
  ]
}